@model TorrentNews.Models.TorrentsListModel

@{
    ViewBag.Title = "Most recent torrents - Torrent news";
}

@Html.Partial("_Pager", Model)

@if (Model.Torrents.Any())
{
    @Html.Partial("_TorrentsTable", Model)
}
else
{
    <h2 id="nothingFoundMessage">Nothing found!</h2>   
}

@Html.Partial("_Pager", Model)

@section scripts
{
    <script type="text/javascript" src="/Scripts/app.js"></script>
    
    <script type="text/javascript">
        configureTrailerButton();
        configureTooltips();
        configureStarButtons();
        configureBookmarks();

        $(document).ready(function() {
            if (document.URL.indexOf('&bmupd') > -1) {
                alert('bm updated');
            }
        });
    </script>
}
