@model TorrentNews.Models.TorrentModel

@{
    var t = Model;
}

<div class="relatedTorrentsContainer">
    <p class="relatedTorrentTitle">Other torrents
        @if (t.RelatedTorrents.Count == 5)
        {
            <span>(latest 5)</span>
        }
    </p>

    @foreach (var rt in t.RelatedTorrents)
    {
        <div class="hasTooltip relatedTorrent">
            <span>
                <a class="tag tagLight@(rt.ReleaseSource.Quality)" 
                    href="http://en.wikipedia.org/wiki/Pirated_movie_release_types" target="_blank">@rt.ReleaseSource.DisplayValue</a>
            </span>
            <a target="_blank" href="@Url.Action("Details", "Torrents", new { id = rt.Id })">@rt.Title</a>
        </div>

        <div class="hidden tooltip tooltipRelatedTorrents">
            <p><span class="label">@rt.Title</span></p>
            <p><span class="label">Size: </span>@rt.Size</p>
            <p><span class="label">Seeds: </span>@rt.Seed</p>
            <p><span class="label">Age: </span>@rt.Age</p>
            <p><span class="label">Score: </span>@rt.Score</p>
        </div>
    }
</div>
